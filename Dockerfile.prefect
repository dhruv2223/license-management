
# Dockerfile.prefect
FROM python:3.9-slim

WORKDIR /app

# Install only what's needed for orchestration
RUN pip install --no-cache-dir prefect psycopg2-binary

# Copy only relevant files
COPY config/ config/
COPY src/ src/
COPY prefect_flow.py .

# Set default command to run the flow
CMD ["python", "prefect_flow.py"]
